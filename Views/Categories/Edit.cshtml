@model Tsql3s2b.Models.Category
@{
    ViewData["Title"] = "Izmena kategorije";
}

<h2>Izmeni kategoriju:</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Categoryid"/>

    <div class="form-group">
        <label asp-for="Categoryname">Naziv kategorije:</label>
        <input type="text" asp-for="Categoryname" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Description">Opis kategorije:</label>
        <textarea rows="3" style="resize:none" class="form-control" asp-for="Description"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Sacuvaj izmene</button>
</form>
